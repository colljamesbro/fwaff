-- Local Script to take all items from every player's backpack and give them to you
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Ensure the script only works for your username
if LocalPlayer.Name ~= "collljamesbroalt1" then
    warn("This script is only for the game owner!")
    return
end

local ToolContainer = Instance.new("Folder", workspace) -- Container for tools you take
ToolContainer.Name = "CollectedTools"

-- Function to take all items from every player's backpack
local function TakeAllItemsFromEveryone()
    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer then -- Skip yourself
            local backpack = player:FindFirstChild("Backpack")
            if backpack then
                for _, item in pairs(backpack:GetChildren()) do
                    if item:IsA("Tool") then
                        -- Clone the tool and add it to your collection
                        local clonedItem = item:Clone()
                        clonedItem.Parent = ToolContainer
                        -- Remove the original tool from the player's backpack
                        item:Destroy()
                    end
                end
                print("Took all items from " .. player.Name .. "'s backpack.")
            else
                warn(player.Name .. " does not have a backpack!")
            end
        end
    end
end

-- Function to equip an item so others can see it
local function EquipTool(toolName)
    local tool = ToolContainer:FindFirstChild(toolName)
    if tool then
        tool.Parent = LocalPlayer.Character
        print("Equipped " .. toolName)
    else
        warn("Tool " .. toolName .. " not found in your collection!")
    end
end

-- Take all items from everyone
TakeAllItemsFromEveryone()

-- Example: Equip a tool from your collection
-- Replace "ExampleTool" with the name of the tool you want to equip
EquipTool("ExampleTool")
